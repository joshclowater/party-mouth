  "author": "Josh Clowater <josh.clowater@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshclowater/party-mouth"
  },
  "license": "UNLICENCED",
  "engines": {
    "node": "10",
    "npm": "6"
  },
  "dependencies": {
    "express": "^4.16.4",
    "immutable": "^3.8.2",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8",
    "redux": "^4.0.1",
    "redux-form": "^8.1.0",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^1.0.2",
    "redux-thunk": "^2.3.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "socketio-wildcard": "^2.0.0",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "jest-styled-components": "^7.0.0-2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.5"
  },
  "scripts": {
    "start": "node server/index.js dev & react-scripts start",
    "build": "react-scripts build; node server/index.js",
    "lint": "node_modules/eslint/bin/eslint.js ./src",
    "test": "react-scripts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged && npm run test -- --coverage"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.25%",
    "not dead"
  ]
}
